{
  "name": "@phanect/sitelint",
  "version": "0.0.1-alpha",
  "description": "SiteLint crawls all of your pages and find errors from the crawled pages",
  "keywords": [ "linter", "crawler" ],
  "author": "Jumpei Ogawa <phanective@gmail.com>",
  "license": "Apache-2.0",
  "main": "dist/sitelint.js",
  "bin": {
    "sitelint": "./dist/cli.js"
  },
  "scripts": {
    "start": "ts-node ./src/cli.ts",
    "build": "tsc",
    "lint": "eslint --ext=.js,.jsx,.ts,.tsx .",
    "release": "yarn publish --access public --non-interactive",
    "test": "jest --verbose"
  },
  "dependencies": {
    "@hint/connector-jsdom": "^4.0.2",
    "@hint/connector-local": "^3.0.2",
    "@hint/connector-puppeteer": "^2.0.0",
    "hint": "^5.0.1",
    "supercrawler": "^1.7.0",
    "vnu": "19.9.4"
  },
  "devDependencies": {
    "@phanect/eslint-plugin": "latest",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.0.2",
    "@types/request": "^2.48.3",
    "eslint": "latest",
    "eslint-plugin-jest": "latest",
    "express": "^4.17.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "latest",
    "typescript": "^3.4.5"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
